<dataBridgeConfiguration>

    <workerThreads>{{databridge.receiver.worker_threads}}</workerThreads>

    <!--Maximum amount of messages that can be queued internally in MB-->
    <maxEventBufferCapacity>{{databridge.receiver.max_event_buffer_capacity}}</maxEventBufferCapacity>

    <!-- Queue size; the maximum number of events that can be stored in the queue -->
    <eventBufferSize>{{databridge.receiver.event_buffer_size}}</eventBufferSize>
    <clientTimeoutMin>{{databridge.receiver.client_timeout_min}}</clientTimeoutMin>

    <keyStoreLocation>{{databridge.receiver.keystore_location}}</keyStoreLocation>
    <keyStorePassword>{{databridge.receiver.keystore_password}}</keyStorePassword>

    <dataReceiver name="Thrift">
    {% for configuration_key,configuration_value in transport.thrift.receiver.parameters.items() %}
            <config name="{{configuration_key}}">{{configuration_value}}</config>
    {% endfor %}
    </dataReceiver>

    <dataReceiver name="Binary">
    {% for configuration_key,configuration_value in transport.binary.receiver.parameters.items() %}
                <config name="{{configuration_key}}">{{configuration_value}}</config>
        {% endfor %}
    </dataReceiver>

</dataBridgeConfiguration>
